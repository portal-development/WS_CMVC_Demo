<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WS_CMVC_Demo</title>
    <partial name="_MetrikaPartial" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WS_CMVC_Demo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/belyaev.css" asp-append-version="true" />
</head>
<body>
    <header class="d-print-none">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white navbar-static-top mainnavbar" id="navigation" role="navigation">
            <div class="container-fluid navigationcontainer">
                <div class="navbar-collapse collapse w-100 mainmenu" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light mainnav" asp-area="" asp-controller="Home" asp-action="Index">ГЛАВНАЯ</a>
                        </li>
                        <li class="nav-item d-sm-none d-md-block">
                            <a class="nav-link text-light mainnav" asp-area="" asp-controller="Home" asp-action="About">О НАС</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light mainnav" asp-area="" asp-controller="Delegation" asp-action="Index">МОИ ЗАЯВКИ</a>
                        </li>
                        <li class="nav-item d-sm-none d-md-block">
                            <a class="nav-link text-light mainnav" asp-area="" asp-controller="Home" asp-action="Contacts">КОНТАКТЫ</a>
                        </li>
                        @if (User.IsInRole("accreditator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light mainnav" asp-controller="UserPackages" asp-action="RequestList" asp-route-eventid="1">ЗАЯВКИ</a>
                            </li>
                        }
                        @if (User.IsInRole("accreditator") || User.IsInRole("volunteer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light mainnav" asp-controller="BadgeServiceCheckups" asp-action="Start"><i class="fa fa-qrcode" aria-hidden="true"></i> КОНТРОЛЬНЫЕ ТОЧКИ</a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container@(ViewData["Title"]?.ToString() == "Главная" ? "-fluid" : null)">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="container-fluid d-print-none mt-1 footer1" style="background-color: #080808;">
            <div class="container">
                <div class="row mt-3">
                    <div class="col-md-3">
                        <p class="d-block mb-3 text-muted">&copy; @DateTime.Now.Year – WS_CMVC_Demo</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/lib/bootstrap-select/dist/js/i18n/defaults-ru_RU.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/customval.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
