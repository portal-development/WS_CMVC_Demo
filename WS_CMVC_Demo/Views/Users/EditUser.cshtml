@using WS_CMVC_Demo.Models.UsersViewModels
@model UserWithRolesViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@media (min-width: 768px) {
        .col-form-label {
            text-align: right;
        }
    }

    .col-form-label {
        font-weight: bold;
    }

    .form-control {
        max-width: none;
    }
</style>

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ApplicationUser</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(model => model.User.SecondName, htmlAttributes: new { @class = "col-md-3 col-form-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.User.SecondName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.User.SecondName, "", new { @class = "invalid-feedback" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.User.Name, htmlAttributes: new { @class = "col-md-3 col-form-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.User.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.User.Name, "", new { @class = "invalid-feedback" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.User.MiddleName, htmlAttributes: new { @class = "col-md-3 col-form-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.User.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.User.MiddleName, "", new { @class = "invalid-feedback" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-md-3 col-form-label">Роли</label>
        <div class="col-md-9">
            @foreach (var item in Model.AvailableRoles)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="SelectedRoles" @( item.Selected ? "checked=\"checked\"" : null) value="@item.Value" /> @item.Text
                    </label>
                </div>
            }
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-md-3 col-md-9">
            <a href="/Users" class="btn btn-outline-secondary btn-lg"><i class="fas fa-arrow-left"></i> Вернуться без сохранения</a>
            <input type="submit" value="Сохранить" class="btn btn-lg btn-success" />
        </div>
    </div>
</div>
}
