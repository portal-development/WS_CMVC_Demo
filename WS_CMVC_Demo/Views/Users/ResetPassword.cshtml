@using WS_CMVC_Demo.Models.UsersViewModels
@model UserManagerResetPasswordViewModel
@{
    ViewBag.Title = "Сброс пароля для пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<h4>Введите новый пароль</h4>
<hr />

@using (Html.BeginForm("ResetPassword", "Users", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-outline-primary" value="Сбросить пароль" />
}
