@model ApplicationRole

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@media (min-width: 768px) {
        .col-form-label {
            text-align: right;
        }
    }

    .col-form-label {
        font-weight: bold;
    }

    .form-control {
        max-width: none;
    }
</style>

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-3 col-form-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "invalid-feedback" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-md-3 col-form-label" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", rows = 3 } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "invalid-feedback" })
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-md-3 col-md-9">
            <a href="/Users" class="btn btn-outline-secondary btn-lg"><i class="fas fa-arrow-left"></i> Вернуться без сохранения</a>
            <input type="submit" value="Сохранить" class="btn btn-lg btn-success" />
        </div>
    </div>
</div>
}
