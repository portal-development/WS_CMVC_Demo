@using WS_CMVC_Demo.Models.Badge
@model IEnumerable<BadgeService>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Контроль доступа</h1>
<h4>Выберите тип контрольной точки для контроля</h4>
<hr />
<div style="max-width: 400px;">
    <div class="card">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model)
            {
                <li class="list-group-item" title="@item.Title (@(EnumHelper<BadgeServicePeriodType>.GetDisplayValue(item.PeriodType)))">
                    <a asp-action="Create" asp-route-id="@item.Id" class="lead">
                        <div class="row justify-content-between align-items-center">
                            <div class="col">
                                @item.Title
                            </div>
                            @if (!string.IsNullOrEmpty(item.IcoUrl))
                            {
                                <div class="col-auto">
                                    <img src="@item.IcoUrl" style="height: 2.5rem;" />
                                </div>
                            }
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>