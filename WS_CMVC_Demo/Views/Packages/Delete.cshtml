@model WS_CMVC_Demo.Models.Service.Package

@{
    ViewData["Title"] = "Удаление пакета";
}

<h1>@ViewData["Title"]</h1>

<h3>Пакет будет удален. Все данные о бронировании данного пакета будут потеряны. Вы подтверждаете удаление пакета?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-route-eventid="@ViewBag.EventId">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="List" asp-route-eventid="@ViewBag.EventId">Назад</a>
    </form>
</div>
