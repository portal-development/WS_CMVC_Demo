@model EditUserViewModel
@{
    ViewBag.Title = "Редактирование профиля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@media (min-width: 768px) {
        .col-form-label {
            text-align: right;
        }
    }

    .col-form-label {
        font-weight: bold;
    }

    .form-control {
        max-width: none;
    }
</style>

<h2>@ViewBag.Title</h2>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="SecondName" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="SecondName" class="form-control" />
            <span asp-validation-for="SecondName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="MiddleName" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="MiddleName" class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PassportNumber" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="PassportNumber" type="number" class="form-control" />
            <span asp-validation-for="PassportNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-3 col-md-9">
            <input type="submit" value="Сохранить" class="btn btn-lg btn-success" />
        </div>
    </div>
</form>

