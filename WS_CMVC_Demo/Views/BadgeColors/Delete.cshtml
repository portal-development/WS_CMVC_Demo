@model WS_CMVC_Demo.Models.Badge.BadgeColor

@{
    ViewData["Title"] = "Удаление";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Вы уверены? Данное действие невозможно отменить.</h3>
<div>
    <h4>Цвет бейджа</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColorGraph)
        </dt>
        <dd class="col-sm-10">
            <div style="height:100%; background-color: @Model.ColorGraphHex; color: @Model.ColorGraphHex;">X</div>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
