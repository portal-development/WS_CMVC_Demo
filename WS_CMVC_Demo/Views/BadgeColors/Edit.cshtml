@model WS_CMVC_Demo.Models.Badge.BadgeColor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Цвет бейджа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColorGraphHex" class="form-label"></label>
                <input asp-for="ColorGraphHex" type="color" class="form-control form-control-color validate-ignore" />
                <span asp-validation-for="ColorGraphHex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

